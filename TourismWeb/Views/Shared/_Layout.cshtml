<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 旅行社</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-default" role="navigation">

        <div class="navbar-inner">

            <a class="navbar-brand" href="/Statement/Index">
                <img alt="Logo" src="img/logo20.png" class="hidden-xs" />
                <span>旅行社Logo</span>
            </a>

            <!-- user dropdown starts -
            <div class="btn-group pull-right">
                <button class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                    <i class="glyphicon glyphicon-user"></i><span class="hidden-sm hidden-xs"> Admin</span>
                    <span class="caret"></span>
                </button>
                <ul class="dropdown-menu">
                    <li><a href="#">Profile</a></li>
                    <li class="divider"></li>
                    <li><a href="login.html">Logout</a></li>
                </ul>
            </div>
            -- user dropdown ends -->
            <!-- navigator menu starts-->

            <ul class="collapse navbar-collapse nav navbar-nav top-menu">
                <li><a href="/Account/Login"><i class="glyphicon glyphicon-globe"></i> 登入</a></li>
                <li class="dropdown">
                    <a href="#" data-toggle="dropdown">
                        <i class="glyphicon glyphicon-star"></i> 標籤一 <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu" role="menu">
                        <li>@Html.ActionLink("聯絡", "Contact", "Statement")</li>
                        <li>@Html.ActionLink("首頁", "Index", "Statement")</li>
                    </ul>
                </li>
                <li class="dropdown">
                    <a href="#" data-toggle="dropdown">
                        <i class="glyphicon glyphicon-cloud-download"></i> 標籤二 <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu" role="menu">
                        <li><a href="#">Something else here</a></li>
                        <li class="divider"></li>
                        <li><a href="#">Separated link</a></li>
                        <li class="divider"></li>
                        <li><a href="#">One more separated link</a></li>
                    </ul>
                </li>
            </ul>
            <!-- navigator menu ends-->
        </div>
    </div>

    <!-- topbar ends -->
    <div class="container body-content">
        @RenderBody()
        @RenderSection("part1", required: false)
        <footer>
            <p>&copy; @DateTime.Now.Year</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Content/css")
    @RenderSection("scripts", required: false)
</body>
</html>
